@model IEnumerable<testTrain.Model.ViewModels.DisplayDeliveryManVM>

@{
    ViewData["Title"] = "DisplayDriver";
}

<h1>DisplayDriver</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.PhoneNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.nationalID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.fullName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.carType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.plateNumbers)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.plateLetters)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.pickUpLocation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.capacity)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.PhoneNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.nationalID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.fullName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.carType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.plateNumbers)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.plateLetters)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.pickUpLocation)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.capacity)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
